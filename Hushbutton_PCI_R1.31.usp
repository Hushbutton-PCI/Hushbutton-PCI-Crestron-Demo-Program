PUSH Poll
{
	INTEGER nIndex; 
	
	nIndex = GETLASTMODIFIEDARRAYINDEX();
	Trace("POLL nIndex: %d", nIndex);

	
	IF(nIndex < 9)
	{
		sString = sString + "{?" + ITOA(nIndex) + "}";
	}
	ELSE IF (nIndex = 9)
	{
		sString = sString + "{?a}";
	}
	
	IF(nWaitingForAck = 0)
		SendCommand();
}
 
