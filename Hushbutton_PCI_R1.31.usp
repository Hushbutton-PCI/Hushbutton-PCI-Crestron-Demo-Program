	INTEGER nIndex; 
	
	nIndex = GETLASTMODIFIEDARRAYINDEX();
	
	IF(nIndex < 9)
		sString = sString + "{=" + ITOA(nIndex) +"xxx0}";
	ELSE IF (nIndex = 9)
