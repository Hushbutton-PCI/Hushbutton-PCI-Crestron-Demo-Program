PUSH LED_Off
{
	INTEGER nIndex; 
	
	nIndex = GETLASTMODIFIEDARRAYINDEX();
	
	IF(nIndex < 9)
		sString = sString + "{=" + ITOA(nIndex) +"0001}";
	ELSE IF (nIndex = 9)
		sString = sString + "{=a000000ff}";
	
	IF(nWaitingForAck = 0)
		SendCommand();
}

